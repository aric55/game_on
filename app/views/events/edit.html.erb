<% provide(:title, "Update Event") %>
<h1>Update <%= @event.name %></h1>

<div class="row">
  <div class="divcenter">
    <%= form_for(@event) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :dateheld, "Date of Event" %>
      <%= f.date_field :dateheld %>

      <%= f.submit "Update Event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>