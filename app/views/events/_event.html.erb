  	| <%= link_to "update", edit_event_path(event) %>
    | <%= link_to "delete", event, method: :delete,
                                  data: { confirm: "You sure?" } %>
    <% end %>
  </td>
  <td><%= event.dateheld %></td>
  <td>200</td>
</tr>